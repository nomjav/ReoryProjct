        }

            #list2 h2 {
                margin-left: 15px;
                margin-bottom: 0px;
            }

            #list2 ol {
                margin-top: 0px;
                margin-bottom: 30px;
                font-style: italic;
                font-family: Georgia, Times, serif;
                font-size: 20px;
                color: blue;
            }

                #list2 ol li {
                }

                    #list2 ol li p {
                        padding: 8px;
                        font-style: normal;
