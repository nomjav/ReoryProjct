@using ChkProject.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Reports</title>
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">

            
            <h2 class="widget" style="background:#4a8bc2; height:40px; color:white;vertical-align: middle;line-height: 35px; padding-left:5px">Reports</h2>

            <div id="mainouterdiv" style="width:100%;display: inline-block;box-sizing: border-box;">

                <div id="list2">

                    <h2>Accounting</h2>
                    <ol>
                        <li><p><em><a id="reciept" title="" href="@Url.Content("~/Receipt/")">StockIn</a></em>View a list of all the jobs that have payables - most recent first.  You can click on a link to view each payable.</p></li>
                        <li><p><em><a id="invoice" title="" href="@Url.Content("~/Invoice/")">StockOut</a></em>Displays a summary of the last month's worth of invoices.  Allows users to see the actual invoice, as well.</p></li>
                        
                    </ol>

                </div>
            </div>

        </div>
            </div>
        </div>
   
    <!-- END MAIN CONTENT -->










    <style>

