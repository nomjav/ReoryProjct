@model ChkProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h3 class="panel-title">Register new User</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.HiddenFor(x => Model.LocationId, new { @id = "hdnlocationid" })
                            @Html.HiddenFor(x => Model.RoleId, new { @id = "hdnroleid" })
                            @Html.AntiForgeryToken()
                            <h4>Create a new account.</h4>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @style = "text-align: left;", @class = "col-md-6 control-label" })
                                    <div class="col-md-12">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group required col-md-6">
                                    <label class="control-label col-md-6"style="text-align:left">Location :</label>
                                    <div class='col-md-12'>
                                            <select id="ddl_location" class="form-control" onchange="ddllocationchange()">
                                                <option>--Select--</option>
                                                @foreach (var item in Model.DDLLocation)
                                                {

                                                    <option value="@item.LocationId">@item.LocationName</option>
                                                }
                                            </select>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group required col-md-6">
                                    <label class="control-label col-md-6" style="text-align:left">Role :</label>
                                    <div class='col-md-12'>
                                            <select id="ddl_role" class="form-control"  onchange="ddlrolechange()">
                                                <option>--Select--</option>
                                                @foreach (var item in Model.DDLRole)
                                                {

                                                    <option value="@item.RoleId">@item.RoleName</option>
                                                }
                                            </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-12">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    function ddlrolechange()
    {

        $("#hdnroleid").val($("#ddl_role").val());
    }

    function ddllocationchange()
    {
        $("#hdnlocationid").val($("#ddl_location").val());

    }
    </script>
}
